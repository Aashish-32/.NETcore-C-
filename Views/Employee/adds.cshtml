@model Employee
@{
    ViewData["title"]="Add employee";
}

<form asp-controller="Employee" asp-action="Add", method="POST">
  <div class="form-group">
    <label asp-for="firstname"></label>
    <input type="text" class="form-control"  asp-for="firstname"placeholder="Enter First name">
    <span asp-validation-for="firstname"></span>
    <br>
    
  </div>
   <div class="form-group">
    <label asp-for="lastname"></label>
    <input type="text" class="form-control" asp-for="lastname" placeholder="">
    <span asp-validation-for="lastname"></span>
    
  </div>
   <div class="form-group">
    <label asp-for="salary"></label>
    <input type="number" class="form-control"  asp-for="salary" placeholder="">
    <span asp-validation-for="salary"></span>
  </div>

   <div class="form-group">
    <label asp-for="Gender"></label>
    <input type="text" class="form-control" asp-for="Gender" placeholder="Type M for male or F for femalre">
    <span asp-validation-for="Gender"></span>
  </div>
 


  <button type="submit" class="btn btn-primary">Submit</button>
</form>